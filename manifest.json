{
  "manifest_version": 3,
  "name": "Healthy Coding Habits",
  "version": "1.0",
  "description": "Promotes healthy coding habits with gentle reminders and wellness tools",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://stackoverflow.com/*",
    "https://stackexchange.com/*",
    "https://codepen.io/*",
    "https://jsfiddle.net/*",
    "https://repl.it/*",
    "https://codesandbox.io/*",
    "https://gitlab.com/*",
    "https://bitbucket.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://stackoverflow.com/*",
        "https://stackexchange.com/*",
        "https://codepen.io/*",
        "https://jsfiddle.net/*",
        "https://repl.it/*",
        "https://codesandbox.io/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Healthy Coding Dashboard"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}